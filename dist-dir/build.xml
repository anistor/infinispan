<project name="dist-dir" basedir="." default="clean">

  <property name="output.dir" value="target/${jboss.edg.release.finalName}" />

  <target name="clean">
    <delete dir="${output.dir}"/>
  </target>

  <target name="copy-files">
    <copy todir="${output.dir}">
      <fileset dir="${project.basedir}/../../external/as/build/target/jboss-${version.org.jboss.as}">
	<include name="**"/>
      </fileset>
    </copy>
  </target>

  <target name="patch-files">
    <!-- TODO transform AS to EDG -->
  </target>

  <target name="all" depends="clean, copy-files, patch-files"/>
</project>
